<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link rel="stylesheet" href="/stylesheets/index.css">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <script src="/javascripts/jquery-3.6.0.min.js" defer></script>
        <script src='/javascripts/index.js' defer></script>
    </head>
    <body>
        <header>
            <div class="logo">UNIGUESSER</div>
            <% if (session.user_id) { %>
                <nav>
                    <a href="/" id="home-button" class="nav-option selected-page">
                      <div>Home</div>
                    </a>
                    <a href="/games" id="game-button" class="nav-option">
                      <div>Play Game</div>
                    </a>
                    <a href="/scores" id="scores-button" class="nav-option">
                      <div>High Scores</div>
                    </a>
                    <a id="logout-button" class="nav-option">
                      <div>Logout</div>
                    </a>
                  </nav>
            <% } %>
        </header>

        <% if (!session.user_id) { %>
            <form id="login-form" action="/auth/login-or-register" method="POST">
                <div>
                    <label>Username</label>
                    <input type="text" name="username" />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" name="password" />
                </div>
                <div>
                    <input type="submit" type="submit" name="action" value="login" />
                    <input type="submit" type="submit" name="action" value="register" />
                </div>
            </form>
        <% } %>
            
        </main>
    </body>
</html>